{
  "name": "frank-expert-discovery",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"frontend,bff,worker\" -c \"cyan,magenta,yellow\" \"npm run dev:frontend\" \"npm run dev:bff\" \"npm run dev:worker\"",
    "build": "npm run build:frontend && npm run build:bff && npm run build:worker",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "dev:bff": "npm run dev --workspace=apps/bff",
    "build:bff": "npm run build --workspace=apps/bff",
    "dev:worker": "npm run dev --workspace=apps/worker",
    "build:worker": "npm run build --workspace=apps/worker"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  }
}
